@model TechPrakt.Models.RegisterViewModel

@{
    ViewData["Title"] = "Реєстрація";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header text-center bg-success text-white">
                    <h3>Реєстрація</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Ім'я</label>
                            <input asp-for="Name" class="form-control" placeholder="Введіть ім'я" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SecondName" class="form-label">Прізвище</label>
                            <input asp-for="SecondName" class="form-control" placeholder="Введіть прізвище" />
                            <span asp-validation-for="SecondName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Введіть email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Пароль</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Введіть пароль" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Підтвердження пароля</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Повторіть пароль" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Зареєструватися</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p>Вже маєте акаунт? <a asp-controller="Account" asp-action="Login">Увійти</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
